{
  "info": {
    "name": "WeatherHub API",
    "description": "Postman collection for testing the WeatherHub API reference implementation.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "a43fac60-ddba-4d72-8b07-6da70d750a0c"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000"
    },
    {
      "key": "jwt",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Signup",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/auth/signup",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "auth",
                "signup"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"email\": \"alice+1750310293@example.com\", \"password\": \"StrongP@ss123\"}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "var json = pm.response.json();",
                  "pm.collectionVariables.set(\"jwt\", json.token);"
                ]
              }
            }
          ]
        },
        {
          "name": "Signin",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/auth/signin",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "auth",
                "signin"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"email\": \"alice@example.com\", \"password\": \"StrongP@ss123\"}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "var json = pm.response.json();",
                  "pm.collectionVariables.set(\"jwt\", json.token);"
                ]
              }
            }
          ]
        },
        {
          "name": "Signout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/auth/signout",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "auth",
                "signout"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Weather",
      "item": [
        {
          "name": "Get Weather (cache miss then hit)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/weather?lat=24.71&lon=46.68",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "weather"
              ],
              "query": [
                {
                  "key": "lat",
                  "value": "24.71"
                },
                {
                  "key": "lon",
                  "value": "46.68"
                }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "// first call may be openweather, subsequent cache",
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "var json = pm.response.json();",
                  "pm.expect(json).to.have.property('source');"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "History",
      "item": [
        {
          "name": "List History",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/history?limit=10&skip=0&sort=-requestedAt",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "history"
              ],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "skip",
                  "value": "0"
                },
                {
                  "key": "sort",
                  "value": "-requestedAt"
                }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "pm.test(\"Response is array\", function () {",
                  "    pm.expect(pm.response.json()).to.be.an('array');",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Count History",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/history?count=true",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "history"
              ],
              "query": [
                {
                  "key": "count",
                  "value": "true"
                }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "pm.test(\"Total key present\", function () {",
                  "    pm.expect(pm.response.json()).to.have.property('total');",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    }
  ]
}